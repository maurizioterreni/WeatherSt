<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="integration" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>


		<class>it.unifi.sam.terreni.weatherSt.model.sensor.Sensor</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.TemperatureMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.HumidityMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.PressureMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.RainMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.UVMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.WindDirectionMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.units.WindSpeedMeasure</class>
		<class>it.unifi.sam.terreni.weatherSt.model.WeatherStation</class>
		<class>it.unifi.sam.terreni.weatherSt.model.sensor.Measure</class>


		<properties>
			<property name="javax.persistence.validation.mode" value="none" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:testdb" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>

